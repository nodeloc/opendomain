# Application
APP_ENV=development
PORT=8000
LOG_LEVEL=debug
FRONTEND_URL=http://localhost:3001

SITE_NAME=OpenDomain
SITE_DESCRIPTION=Free Domain Registration Platform

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_USER=opendomain
DB_PASSWORD=your-database-password
DB_NAME=opendomain
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=2

# PowerDNS
POWERDNS_API_URL=http://localhost:8081
POWERDNS_API_KEY=your-powerdns-api-key

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@opendomain.com

# OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

NODELOC_CLIENT_ID=your-nodeloc-client-id
NODELOC_CLIENT_SECRET=your-nodeloc-client-secret

# Scanner
SCANNER_CONCURRENCY=10
SCANNER_TIMEOUT=30

# Security Scanning APIs (Optional)
GOOGLE_SAFE_BROWSING_KEY=your-google-safe-browsing-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Default Nameservers
DEFAULT_NS1=ns1.example.com
DEFAULT_NS2=ns2.example.com

# NodeLoc Payment
NODELOC_PAYMENT_ID=your-nodeloc-payment-id
NODELOC_SECRET_KEY=your-nodeloc-secret-key

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHANNEL_ID=-1001234567890

# FOSSBilling Integration (Optional)
FOSSBILLING_ENABLED=false
FOSSBILLING_URL=https://your-fossbilling-instance.com
FOSSBILLING_ADMIN_API_KEY=your-fossbilling-admin-api-key
